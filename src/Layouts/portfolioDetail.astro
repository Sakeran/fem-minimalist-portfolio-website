---
  import Layout from "./main.astro";

  export interface Props {
    title: string;

    nextLink: string;
    nextTitle: string;

    previousLink: string;
    previousTitle: string;
  }
---

<Layout title={Astro.props.title}>
  <div class="wrapper">
    <div>
      <slot name="hero" />
    </div>
    <div class="mt-16 sm:mt-10 md:mt-[7.5rem] | md:flex md:items-start md:gap-[7.5rem]">
      <div class="detail-overview | py-6 | md:min-w-[37ch] | border-t border-b border-prose/[0.15]">
        <h1 class="heading-2">{Astro.props.title}</h1>
        
        <div class="detail-overview-text text-sm">
          <slot name="overview" />
        </div>

        <div class="text-input md:text-md text-primary font-bold md:space-y-2">
          <slot name="skills" />
        </div>

        <a class="detail-overview-visit-btn btn" href="#">Visit Website</a>
      </div>

      <div class="mt-10 md:mt-0">

        <h2 class="heading-3">Project Background</h2>
        <div class="mt-7 text-sm">
          <slot name="background"/>
        </div>

        <div class="mt-10">
          <h2 class="heading-3">Static Previews</h2>
          <div class="mt-10 md:mt-7 | flex flex-col gap-8">
            <slot name="previews" />
          </div>
        </div>

      </div>
    </div>


    <div class="mt-16 sm:mt-20 md:mt-16 | border border-prose/[0.15] border-l-0 border-r-0 | flex">
      <div class="py-6 sm:py-8 | w-full | border-r border-prose/[0.15]">
        <a class="flex flex-col gap-4 sm:flex-row sm:gap-8 sm:items-center | max-w-max mr-auto | focus:outline-black" href={Astro.props.previousLink}>
          <div>
            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="16"><path fill="none" stroke="#33323D" d="M9 0L1 8l8 8"/></svg>
          </div>
          <div class="flex flex-col">
            <span class="text-prose/50 order-1">Previous Project</span>
            <span class="heading-3">{Astro.props.previousTitle}</span>
          </div>
        </a>
      </div>
      <div class="py-6 sm:py-8 w-full">
        <a class="flex flex-col gap-4 items-end sm:flex-row sm:gap-8 sm:items-center | max-w-max ml-auto | focus:outline-black" href={Astro.props.nextLink}>
          <div class="sm:order-1">
            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="16"><path fill="none" stroke="#33323D" d="M1 0l8 8-8 8"/></svg>
          </div>
          <div class="flex flex-col items-end">
            <span class="text-prose/50 order-1">Next Project</span>
            <span class="heading-3">{Astro.props.nextTitle}</span>
          </div>
        </a>
      </div>
    </div>

  </div>

  <section id="contact-me" class="wrapper | mt-[7.25rem] mb-20 sm:mt-24 sm:mb-24">
    <div class="contact-me-section | text-center sm:text-left | flex flex-col sm:flex-row gap-10 sm:gap-8 items-center">
      <h2 class="heading-2 max-w-[14ch]">Interested in doing a project together?</h2>
      <a href="/contact" class="btn order-2">Contact Me</a>
    </div>
  </section>
</Layout>

